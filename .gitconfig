[user]
    # overridden for other environments by env variables
    name = Vojtech Jasny
    email = vojtech.jasny@gooddata.com

[alias]
    # shorthands
    st = status
    co = checkout
    cherrypick = cherry-pick

    # neat stuff
    l  = log --pretty=format:'%Cred%h%Creset %Cgreen%s%Creset [%ar by %an]'
    sl = log --pretty=format:'%Cred%h%Creset %Cgreen%s%Creset [%ar by %an]' -15
    d = diff --color=always
    pr = pull --rebase
    conflicts = "!f() { git ls-files -u | cut -f 2 | sort -u; }; f"

    recent-branches = "!f() { git for-each-ref --format='%(refname:short)' --sort=-committerdate --count 15 refs/heads/ | tail -r; }; f"

[colors]
    diff = auto
    grep = auto
    status = auto
    ui = true
    interactive = auto

[apply]
    whitespace = nowarn

[core]
    pager = less -FXRS

[push]
    default = upstream # only push current branch

[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true

[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
