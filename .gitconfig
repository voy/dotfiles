# overridden for other environments by env variables
[user]
	name = "Vojtech Jasny"
	email = "voy@voy.cz"

[alias]
	s = status
	l = log --pretty=format:'%Cred%h%Creset %Cgreen%s%Creset [%ar by %an]'
	d = diff --color
	st = status
	co = checkout
	br = branch
	pr = pull --rebase
	ltree = log --oneline --all --graph
	sp = stash pop
	sl = stash list
	ss = "!f() { git stash show -p stash@{$1}; }; f"
	sd = "!f() { git stash drop stash@{$1}; }; f"
	conflicts = "!f() { git ls-files -u | cut -f 2 | sort -u; }; f"

[colors]
	diff = auto
	grep = auto
	status = auto
	ui = auto

[apply]
	whitespace = nowarn

[core]
	pager = less -FXRS

[push]
	# only push current branch
	default = upstream
